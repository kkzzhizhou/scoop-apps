    },
    "notes": "Hints: <https://github.com/Blinue/Magpie/wiki/FAQ%20(EN)>",
    "shortcuts": [
        [
            "Magpie.exe",
            "Magpie Preview"
        ]
    ],
    "persist": [
        "config",
        "cache",
        "logs"
    ],
