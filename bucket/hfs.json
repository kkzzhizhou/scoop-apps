{
    "version": "3.0.5",
    "description": "A web file server to run on your computer",
    "homepage": "https://rejetto.com/hfs",
    "license": "GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/rejetto/hfs/releases/download/v3.0.5/hfs-windows-x64-3.0.5.zip",
            "hash": "1770325bd7baf389c3a407eefb416b98facb618a63f5d98181ba675d10909781"
        }
    },
    "pre_install": "if (!(Test-Path \"$persist_dir\\config.yaml\")) { New-Item \"$dir\\config.yaml\" | Out-Null }",
    "bin": [
        [
            "hfs.exe",
            "hfs",
            "--cwd $dir"
        ]
    ],
    "shortcuts": [
        [
            "hfs.exe",
            "HFS",
            "--cwd $dir"
        ]
    ],
    "persist": [
        "config.yaml",
        "logs",
        "plugins"
    ],
    "checkver": {
        "github": "https://github.com/rejetto/hfs"
    },
    "autoupdate": {
        "url": "https://github.com/rejetto/hfs/releases/download/v$version/hfs-windows-x64-$version.zip"
    }
}
