            "       exit 1",
            "   }",
            "}",
            "if (Test-Path -Path \"$dir\\BootRacerSetup.exe\") { Remove-Item \"$dir\\BootRacerSetup.exe\" -Force }",
            "while ((Get-Process -Name 'Bootrace' -ErrorAction SilentlyContinue).Count -eq 0) {",
            "   Start-Sleep -Milliseconds 50",
            "}",
