        "if (Test-Path \"$persist_dir\\data\") {",
        "  ensure \"$env:APPDATA\\CherryStudio\" | Out-Null",
        "  Move-Item \"$persist_dir\\data\\*\" \"$env:APPDATA\\CherryStudio\" -Recurse",
