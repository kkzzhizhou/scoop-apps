    "pre_install": "Get-ChildItem \"$dir\" 'rustdesk-*.exe' | Select-Object -First 1 | Rename-Item -NewName 'RustDesk.exe'",
    "shortcuts": [
        [
            "RustDesk.exe",
            "RustDesk"
