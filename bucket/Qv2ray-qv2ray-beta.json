{
  "version": "2.7.0-alpha1",
  "description": "Graphical frontend for v2ray (beta)",
  "homepage": "https://github.com/Qv2ray/Qv2ray",
  "license": "GPL-3.0-or-later",
  "depends": "mochi/v2ray",
  "suggest": { "vcredist": "extras/vcredist2019" },
  "architecture": {
    "64bit": {
      "url": "https://download.fastgit.org/Qv2ray/Qv2ray/releases/download/v2.7.0-alpha1/Qv2ray.v2.7.0-alpha1.Windows-x64.7z",
      "hash": "4626c29e48c4b85fff35df03e753fb92889d6f4d82c09eb4709b07479ac792c9"
    },
    "32bit": {
      "url": "https://download.fastgit.org/Qv2ray/Qv2ray/releases/download/v2.7.0-alpha1/Qv2ray.v2.7.0-alpha1.Windows-x86.7z",
      "hash": "481a632a00312360b677a32d1f87cb58b1bfdf0a517199016e4e0fb6fecc40b4"
    }
  },
  "extract_dir": "deployment",
  "installer": {
    "script": [
      "if (-not (Test-Path \"$persist_dir\\config\\Qv2ray.conf\")) {",
      "    New-Item \"$dir\\config\" -ItemType Directory | Out-Null",
      "    New-Item \"$dir\\config\\QV2RAY_FEATURE_DISABLE_AUTO_UPDATE\" | Out-Null",
      "    $current = (appdir 'v2ray' $global) | Join-Path -ChildPath 'current'",
      "    @{",
      "        'config_version' = 14",
      "        'logLevel' = 2",
      "        'kernelConfig' = @{",
      "            'v2CorePath_win'   = \"$current\\v2ray.exe\"",
      "            'v2AssetsPath_win' = \"$current\"",
      "        }",
      "    } | ConvertTo-Json -Depth 20 | Out-File \"$dir\\config\\Qv2ray.conf\"",
      "}"
    ]
  },
  "bin": "qv2ray.exe",
  "shortcuts": [["qv2ray.exe", "Qv2ray (beta)"]],
  "persist": "config",
  "checkver": {
    "url": "https://github.com/Qv2ray/Qv2ray/releases",
    "regex": "/releases/tag/(?:v|V)?([\\w.-]+)"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://download.fastgit.org/Qv2ray/Qv2ray/releases/download/v$version/Qv2ray.v$version.Windows-x64.7z"
      },
      "32bit": {
        "url": "https://download.fastgit.org/Qv2ray/Qv2ray/releases/download/v$version/Qv2ray.v$version.Windows-x86.7z"
      }
    },
    "hash": {
      "url": "https://github.com/Qv2ray/Qv2ray/releases/download/v$version/sha256.list"
    }
  }
}
