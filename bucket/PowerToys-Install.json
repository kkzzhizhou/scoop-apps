{
    "version": "0.55.0",
    "description": "A set of utilities for power users to tune and streamline their Windows experience for greater productivity.",
    "homepage": "https://github.com/microsoft/PowerToys",
    "license": "MIT",
    "changelog": "https://github.com/microsoft/PowerToys/releases/tag/v0.55.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/microsoft/PowerToys/releases/download/v0.55.0/PowerToysSetup-0.55.0-x64.exe#/setup.exe",
            "hash": "2241c78386d6347aae2eda9ad16a980db00f596038fde1a176838f24302a2d07"
        }
    },
    "pre_download": "Assert-Administrator",
    "pre_install": [
        "$processname = \"PowerToys\"",
        "$process = Get-Process $processname -ErrorAction SilentlyContinue",
        "if ($process) {",
        "   $process.CloseMainWindow()",
        "   Start-Sleep -Seconds 5",
        "   if (!$process.HasExited) {",
        "       Start-Sleep -Seconds 25",
        "       $process | Stop-Process -Force",
        "   }",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"PowerToys*\"",
            "$installpath = \"$dir\\setup.msi_\"",
            "$ProgramFiles = [Environment]::GetFolderPath(\"ProgramFiles\")",
            "$filepath = \"$ProgramFiles\\PowerToys\\PowerToys.exe\"",
            "if(((Test-Path -Path $filepath -PathType Leaf) -eq $false) -or ((Get-Command $filepath).Version -lt [System.Version]\"$version\"))",
            "{",
            "   &\"$dir\\setup.exe\" --silent --skip_dotnet_install | Out-Null",
            "   if(((Test-Path -Path $filepath -PathType Leaf) -eq $false) -or ((Get-Command $filepath).Version -lt [System.Version]\"$version\"))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "if (Test-Path -Path \"$dir\\setup.exe\") { Remove-Item \"$dir\\setup.exe\" -Force }"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "changelog": "https://github.com/microsoft/PowerToys/releases/tag/v$version",
        "architecture": {
            "64bit": {
                "url": "https://github.com/microsoft/PowerToys/releases/download/v$version/PowerToysSetup-$version-x64.exe#/setup.exe"
            }
        }
    }
}
