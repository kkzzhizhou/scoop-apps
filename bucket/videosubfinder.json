            "hash": "e10d77f55dd22ac901be6635e64fde9e41cd2396dc4cb1db86091f45680be9f1",
            "pre_install": [
                "if (Test-Path \"$persist_dir\\settings\") {",
                "  Expand-7zipArchive \"$dir\\$fname\" \"$dir\\_temp\" -ExtractDir Release_x64\\settings\\eng",
