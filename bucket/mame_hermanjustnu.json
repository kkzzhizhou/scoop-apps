        "roms",
        "mame.ini",
        "ui.ini",
        "plugin.ini"
    ],
    "checkver": {
        "github": "https://github.com/mamedev/mame",
        "regex": "MAME ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
