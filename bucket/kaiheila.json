{
    "version": "0.0.49.0",
    "description": "Exclusive voice and teaming tools for gamers, safe and free, no ads, low footprint and high quality.",
    "homepage": "https://www.kaiheila.cn",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.kaiheila.cn/protocol.html"
