        },
        "32bit": {
            "url": [
                "https://archive.mozilla.org/pub/firefox/releases/140.0.4/win32/it/Firefox%20Setup%20140.0.4.exe#/dl.7z",
                "https://raw.githubusercontent.com/starise/scoop-confetti/master/scripts/firefox-policies.json#/policies.json"
