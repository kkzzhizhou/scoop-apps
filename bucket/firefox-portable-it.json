        "32bit": {
            "url": [
                "https://archive.mozilla.org/pub/firefox/releases/144.0.2/win32/it/Firefox%20Setup%20144.0.2.exe#/dl.7z",
                "https://raw.githubusercontent.com/starise/scoop-confetti/master/scripts/firefox-policies.json#/policies.json"
