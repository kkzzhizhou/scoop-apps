        "identifier": "GPL-3.0"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/melonDS-emu/melonDS/releases/download/0.9.4/melonDS_0.9.4_win_x64.7z",
            "hash": "8df7ae6293e358dcc4ff9728c72d02886893b89422171f04bb663355fa7faa07"
        }
    },
    "installer": {
        "script": [
            "$FILE = 'melonDS.ini'",
            "if (!(Test-Path \"$persist_dir\\$FILE\")) {",
            "    New-Item \"$dir\\$FILE\" -Type File | Out-Null",
            "}"
        ]
    },
    "bin": "melonDS.exe",
    "shortcuts": [
        [
            "melonDS.exe",
            "melonDS"
        ]
    ],
    "persist": "melonDS.ini",
    "checkver": {
        "github": "https://github.com/Arisotura/melonDS"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/melonDS-emu/melonDS/releases/download/$version/melonDS_$version_win_x64.7z"
            }
        }
    },
    "notes": [
        "ATTENTION: MelonDS requires BIOS and firmware files dumped from a Nintendo DS to function.",
        "Visit http://melonds.kuribo64.net/faq.php for more information."
    ]
}
