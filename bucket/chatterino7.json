{
    "version": "22492554089",
    "description": "Chat client for https://twitch.tv",
    "homepage": "https://github.com/SevenTV/chatterino7",
    "license": "MIT",
    "suggest": {
        "vcredist-aio": "extras/vcredist-aio"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/SevenTV/chatterino7/releases/download/nightly-build/chatterino-windows-x86-64-Qt-6.9.3.zip",
            "hash": "6f9a080cabd2691a577353c239295d070d7ec6e6983e091e34f88d5ba3bae9fd"
        }
    },
    "extract_dir": "Chatterino2",
    "pre_install": [
        "Get-ChildItem \"$dir/chatterino.exe\" | Rename-Item -NewName { $_.name.Replace('o', 'o7') }",
        "'externally-packaged' | Out-File -Encoding utf8 -Append \"$dir/modes\""
    ],
    "shortcuts": [
        [
            "chatterino7.exe",
            "Chatterino7"
        ]
    ],
    "bin": "chatterino7.exe",
    "checkver": {
        "script": [
            "try {",
            "    $null = (Invoke-WebRequest https://raw.githubusercontent.com/SevenTV/chatterino7/chatterino7/.github/workflows/build.yml).Content -cmatch 'os: windows-latest\\s+qt-version: ([\\d.]+)'",
            "    $Matches[1],",
            "    (Invoke-RestMethod 'https://api.github.com/repositories/342454835/actions/workflows/build.yml/runs?branch=chatterino7&status=success&per_page=1' -Headers $(if ($auth = Get-GitHubToken) { @{authorization=\"Bearer $auth\"} })).workflow_runs[0].id -join ' '",
            "}",
            "catch { '' }"
        ],
        "regex": "\\A(?<qt>[\\d.]+) (\\d+)\\Z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/SevenTV/chatterino7/releases/download/nightly-build/chatterino-windows-x86-64-Qt-$matchQt.zip"
            }
        }
    }
}
