            "hash": "sha512:3e849111f448528a596e510417cb7bffa8f84d43a6fbbc4a772cbb75da3c1767aba5771d649752edf4c595c7a09790b4ed808defbfbef77bd632b8b7cd6a8252"
        },
        "32bit": {
