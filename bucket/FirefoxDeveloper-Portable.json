            "hash": "sha512:114b4c1407fb03803c1b098196a445958131ffa2747a34f4fd1e450ed87d35abbecce160876a20e3c2f1432ba8539226c14750f6f2e31baf9ce9473be8729ca4"
        },
        "32bit": {
