{
    "version": "1.3.203",
    "description": "Nintendo Switch emulator",
    "homepage": "https://ryujinx.app",
    "license": {
        "identifier": "MIT",
        "url": "https://git.ryujinx.app/ryubing/ryujinx/-/blob/master/LICENSE.txt?ref_type=heads"
    },
    "notes": "ATTENTION: Ryujinx requires Nintendo Switch firmware and a prod.keys file to function.",
    "architecture": {
        "64bit": {
            "url": "https://git.ryujinx.app/api/v4/projects/68/packages/generic/Ryubing-Canary/1.3.203/ryujinx-canary-1.3.203-win_x64.zip",
            "hash": "4750fb901cfb5d8ee16fe7296fd7242f3e1a57aa96cef95d8515ab7b17eff230"
        }
    },
    "extract_dir": "publish",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\\portable\" -ItemType Directory | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\Ryujinx\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\Ryujinx\\*\" -Destination \"$persist_dir\\portable\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\Ryujinx\" -Recurse",
        "   }",
        "}"
    ],
    "bin": "Ryujinx.exe",
    "shortcuts": [
        [
            "Ryujinx.exe",
            "Nintendo Switch [nsw][ryujinx]"
        ]
    ],
    "persist": "portable",
    "checkver": {
        "url": "https://git.ryujinx.app/ryubing/canary/-/releases.atom",
        "regex": "Canary (\\d+\\.\\d+\\.\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://git.ryujinx.app/api/v4/projects/68/packages/generic/Ryubing-Canary/$version/ryujinx-canary-$version-win_x64.zip"
            }
        }
    }
}
