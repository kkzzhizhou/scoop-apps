            "hash": "7dac6a8883ac63907d294a97e089f02706ed88cf604b74a24809d6bd62be7139"
        }
    },
    "installer": {
        "script": [
            "function LinkFile([String] $file, [String] $source = $file) {",
            "    Write-Host \"Creating hardlink for $file\"",
            "    New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\" -Name $file -Target \"$dir\\$source\" | Out-Null",
            "}",
            "LinkFile 'command.dll' '*.dll'"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\\command.dll\" -Force"
    },
    "checkver": {
        "url": "https://github.com/Qv2ray/QvPlugin-Command/releases",
        "regex": "/releases/tag/(?:v|V)?([\\w.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/QvPlugin-Command.v$version.Windows-x64.dll"
            },
            "32bit": {
                "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/QvPlugin-Command.v$version.Windows-x86.dll"
            }
        },
        "hash": {
            "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/sha256.list"
        }
    }
}
