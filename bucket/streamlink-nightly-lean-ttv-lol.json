            },
            "32bit": {
                "url": [
                    "https://nightly.link/streamlink/windows-builds/workflows/$matchBuild/master/streamlink-$version-py312-x86.zip.zip",
                    "https://raw.githubusercontent.com/2bc4/streamlink-ttvlol/master/twitch.py"
                ]
            }
        }
    }
