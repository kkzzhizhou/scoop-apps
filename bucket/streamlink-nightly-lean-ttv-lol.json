{
    "version": "8.0.0-1-py313",
    "description": "A command-line utility that pipes video streams from various services into a video player.",
    "homepage": "https://streamlink.github.io/",
    "license": "BSD-2-Clause",
    "notes": "You will find your config file here: '$dir\\config'. To customise it, read the docs here: https://streamlink.github.io/cli/config.html#syntax",
    "suggest": {
        "FFmpeg": [
            "ffmpeg",
            "ffmpeg-nightly"
        ],
        "mpv": [
            "extras/mpv",
            "extras/mpv-git"
        ]
    },
    "architecture": {
        "64bit": {
            "url": [
                "https://nightly.link/streamlink/windows-builds/workflows/main/master/streamlink-8.0.0-1-py313-x86_64.zip.zip",
                "https://raw.githubusercontent.com/2bc4/streamlink-ttvlol/master/twitch.py"
            ],
            "hash": [
                "a8db554bd64c90fb018a5748206b2837782d7d0c9ee55c3e95ec13c881cb1c85",
                "4e582cc30a54c2cb28870e27a7a526279f8c1b46ec3515ab048426dd1710f8da"
            ]
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir/streamlink-$version-*.zip\" \"$dir\" -Removal",
        "$python = try { $null = (py.exe -0p | Select-Object -First 1) -cmatch '\\S+\\Z'; $Matches[0] } catch {}",
        "$null = $version -cmatch '-py(\\d)(\\d{1,2})\\Z'",
        "$paths = 'bin', 'pkgs'",
        "if ($python -and ($ver = try { [Version]((py.exe -V) -Replace '[^\\d.]') } catch {}) -lt [Version]\"$($Matches[1]).$([byte]$Matches[2] + 1).0\" -and $ver -ge [Version]\"$($Matches[1]).$($Matches[2]).0\") {",
        "    $null = New-Item -ItemType Junction -Path \"$dir/Python\" -Target (Split-Path $python)",
        "}",
        "else { $paths += 'Python' }",
        "$paths | ForEach-Object { Move-Item \"$dir/streamlink-$version-*/$_\" \"$dir\" }",
        "Remove-Item -Recurse \"$dir/streamlink-$version-*\"",
        "Move-Item -Force \"$dir/twitch.py\" \"$dir/pkgs/streamlink/plugins\"",
        "$session = (Get-ChildItem \"$dir/pkgs/streamlink/session/session.py\").FullName",
        "(Get-Content -Raw $session).Replace('plugins_lazy: bool = True', 'plugins_lazy: bool = False') | Set-Content $session",
        "if (Test-Path \"$persist_dir/config\") { return }",
        "if (Test-Path \"$env:APPDATA/streamlink/config\") {",
        "    info 'Copying existing ''config'' from ''%APPDATA%\\streamlink\\config'''",
        "    return $null = Copy-Item \"$env:APPDATA/streamlink/config\" \"$dir/config\"",
        "}",
        "$null = New-Item \"$dir/config\""
    ],
    "bin": [
        [
            "bin/streamlink.exe",
            "streamlink",
            "--config \"$dir\\config\""
        ],
        "bin/streamlinkw.exe"
    ],
    "persist": "config",
    "checkver": {
        "script": [
            "try {",
            "    $id = (Invoke-RestMethod 'https://api.github.com/repositories/472790314/actions/workflows/main.yml/runs?branch=master&status=success').workflow_runs[0].id",
            "    (Invoke-RestMethod \"https://api.github.com/repositories/472790314/actions/runs/$id/artifacts\").artifacts[0].name",
            "}",
            "catch {",
            "    ''",
            "}"
        ],
        "regex": "\\Astreamlink-([^h-z]+-py\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nightly.link/streamlink/windows-builds/workflows/main/master/streamlink-$version-x86_64.zip.zip"
            }
        }
    }
}
