{
    "version": "1.14",
    "description": "Sony PlayStation Portable (PSP) emulator",
    "homepage": "https://www.ppsspp.org",
    "license": {
        "identifier": "GPL 2.0 or later",
        "url": "https://github.com/hrydgard/ppsspp/blob/master/LICENSE.TXT"
    },
    "architecture": {
        "64bit": {
            "url": "https://ppsspp.org/files/1_14/ppsspp_win.zip",
            "hash": "da3edddf87a6c864e61e845943e4006c537ef1dc6a2edb5f11554fe8d0aa4b6b",
            "bin": [
                [
                    "PPSSPPWindows64.exe",
                    "ppsspp"
                ]
            ],
            "shortcuts": [
                [
                    "PPSSPPWindows64.exe",
                    "PPSSPP"
                ]
            ]
        },
        "arm64": {
            "url": "https://ppsspp.org/files/1_14/PPSSPPWindowsARM64.zip",
            "hash": "e9de8f093c04d8a8a7ffad508480d02077ef59a83e0ae7fd11340f2cc24df62a",
            "bin": [
                [
                    "PPSSPPWindowsARM64.exe",
                    "ppsspp"
                ]
            ],
            "shortcuts": [
                [
                    "PPSSPPWindowsARM64.exe",
                    "PPSSPP"
                ]
            ]
        }
    },
    "extract_dir": "ppsspp",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\memstick\" -ItemType Directory | Out-Null",
        "}"
    ],
    "persist": [
        "assets",
        "demos",
        "memstick"
    ],
    "checkver": {
        "url": "https://www.ppsspp.org/downloads.html",
        "regex": "Download ([\\d.]+) zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ppsspp.org/files/$underscoreVersion/ppsspp_win.zip"
            },
            "arm64": {
                "url": "https://ppsspp.org/files/$underscoreVersion/PPSSPPWindowsARM64.zip"
            }
        }
    }
}
