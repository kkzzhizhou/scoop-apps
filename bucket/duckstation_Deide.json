{
    "homepage": "https://www.duckstation.org/",
    "version": "2025-12-06",
    "description": "Sony Playstation emulator",
    "license": {
        "identifier": "GPL-3.0-only",
        "url": "https://github.com/stenzek/duckstation/blob/master/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/stenzek/duckstation/releases/download/latest/duckstation-windows-x64-release.zip",
            "hash": "690f3922a2ea25d09e556d9e8418c6f5d6486089d27803187d6a0c68bdf8b5f5",
            "bin": [
                [
                    "duckstation-qt-x64-ReleaseLTCG.exe",
                    "duckstation"
                ]
            ],
            "shortcuts": [
                [
                    "duckstation-qt-x64-ReleaseLTCG.exe",
                    "Playstation"
                ]
            ]
        }
    },
    "pre_install": [
        "function create($path, $type, $content) {",
        "   if (-not (Test-Path \"$path\")) {",
        "       New-Item \"$path\" -ItemType $type -Value $content | Out-Null",
        "       Write-Output \"Creating $path...\"",
        "   }",
        "}",
        "$settings = \"$dir\\settings.ini\"",
        "$portable = \"$dir\\portable.txt\"",
        "create $settings File",
        "create $portable File"
    ],
    "persist": [
        "portable.txt",
        "settings.ini",
        "bios",
        "cache",
        "cheats",
        "covers",
        "dump",
        "gamesettings",
        "inputprofiles",
        "memcards",
        "savestates",
        "screenshots",
        "shaders",
        "textures"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/stenzek/duckstation/releases",
        "jsonpath": {
            "version": "$.[1].created_at",
            "download": "$.[1].assets[?(@.name == 'duckstation-windows-x64-release.zip')].browser_download_url"
        },
        "regex": "(\\d+)\\/(\\d+)\\/(\\d+) ",
        "replace": "$3-$2-$1"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "$matchDownload"
            }
        }
    }
}
