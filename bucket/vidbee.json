{
    "version": "1.2.0",
    "description": "Download videos from almost any website worldwide",
    "homepage": "https://vidbee.org/",
    "license": {
        "identifier": "MIT license",
        "url": "https://github.com/nexmoe/VidBee#MIT-1-ov-file"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/nexmoe/VidBee/releases/download/v1.2.0/vidbee-1.2.0-setup.exe#/dl.7z",
            "hash": "2a8c0ba46239741b62236b9a998ffa21c3e12e8ae6206b3c0c258079669c6379",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\" -Force -Recurse"
            ]
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
        "Remove-Item \"$dir\\`$*\" -Force -Recurse"
    ],
    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\appdata\" -Target \"$env:APPDATA\\vidbee\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\vidbee\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "bin": "vidbee.exe",
    "shortcuts": [
        [
            "vidbee.exe",
            "VidBee"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/nexmoe/VidBee/releases",
        "jp": "$[0].assets[*].browser_download_url",
        "regex": "/releases/download/v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/nexmoe/VidBee/releases/download/v$version/vidbee-$version-setup.exe#/dl.7z"
            }
        },
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "$basename\\s+$sha256"
        }
    }
}
