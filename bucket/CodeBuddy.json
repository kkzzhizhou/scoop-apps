{
    "version": "1.1.6",
    "description": "An AI-powered IDE",
    "homepage": "https://www.codebuddy.ai/",
    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://codebuddy-1328495429.cos.accelerate.myqcloud.com/aiide/win32-x64-user/CodeBuddy-win32-x64-user-1.1.6.11040835-3ad93acf1-cf385527.exe",
            "hash": "0737005310bea846c053dc8d9a75b5247a0bdf4674a052a884f1f2730a123d37",
            "extract_dir": "{code_GetDestDir}"
        }
    },
    "innosetup": true,
    "post_install": [
        "if (!(Test-Path \"$dir\\data\\extensions\") -and (Test-Path \"$env:USERPROFILE\\.codebuddy\\extensions\")) {",
        "    info '[Portable Mode] Copying extensions...'",
        "    Copy-Item \"$env:USERPROFILE\\.codebuddy\\extensions\" \"$dir\\data\" -Recurse",
        "}",
        "if (!(Test-Path \"$dir\\data\\user-data\") -and (Test-Path \"$env:AppData\\CodeBuddy\")) {",
        "    info '[Portable Mode] Copying user data...'",
        "    Copy-Item \"$env:AppData\\CodeBuddy\" \"$dir\\data\\user-data\" -Recurse",
        "}",
        "$extensions_file = \"$dir\\data\\extensions\\extensions.json\"",
        "if ((Test-Path \"$extensions_file\")) {",
        "    info 'Adjusting path in extensions file...'",
        "    (Get-Content \"$extensions_file\") -replace '(?<=codebuddy(/|\\\\\\\\)).*?(?=(/|\\\\\\\\)data(/|\\\\\\\\)extensions)', $version | Set-Content \"$extensions_file\"",
        "}"
    ],
    "bin": "bin/buddy.cmd",
    "shortcuts": [
        [
            "CodeBuddy.exe",
            "CodeBuddy",
            "--user-data-dir=\"$dir\\data\\user-data\" --extensions-dir=\"$dir\\data\\extensions\""
        ]
    ],
    "persist": "data"
}
