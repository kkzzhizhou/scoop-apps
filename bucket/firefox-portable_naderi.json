    ],
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox",
            "-Profile Profile"
        ]
    ],
    "persist": "Profile",
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
    },
    "autoupdate": {
        "architecture": {
