{
    "homepage": "https://www.smplayer.info/",
    "description": "A free media player with built-in codecs.",
    "version": "21.10.0",
    "architecture": {
        "64bit": {
            "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/21.10.0/smplayer-portable-21.10.0.0-x64.7z",
            "extract_dir": "smplayer-portable",
            "hash": "sha1:8629df9cdd13120a0b6d89ec4e8e5ef20a92e743"
        },
        "32bit": {
            "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/21.10.0/smplayer-portable-21.10.0.0-win32-qt5.6.7z",
            "extract_dir": "smplayer-portable",
            "hash": "sha1:dd14d64e1917f19e294fcd9ce35bb63c59dd379c"
        }
    },
    "pre_install": [
        "function CreateFile ($name, $value = $null) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        Set-Content \"$dir\\$name\" $value -Encoding Ascii",
        "    }",
        "}",
        " 'mpv\\youtube-dl.exe', 'tv.m3u8', 'radio.m3u8', 'favorites.m3u8', 'hdpi.ini', 'playlist.ini', 'player_info.ini' | ForEach-Object { CreateFile $_ } "
    ],
    "persist": [
        "mpv\\youtube-dl.exe",
        "mpv\\portable_config",
        "tv.m3u8",
        "radio.m3u8",
        "favorites.m3u8",
        "hdpi.ini",
        "playlist.ini",
        "player_info.ini",
        "smplayer.ini",
        "smplayer_orig.ini"
    ],
    "bin": [
        "smplayer.exe",
        "mpv\\mpv.exe"
    ],
    "shortcuts": [
        [
            "smplayer.exe",
            "SMPlayer"
        ]
    ],
    "checkver": {
        "url": "https://www.fosshub.com/SMPlayer.html",
        "re": "dwl=smplayer-([\\d.]+)-win32"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/$version/smplayer-portable-$version.0-x64.7z",
                "extract_dir": "smplayer-portable"
            },
            "32bit": {
                "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/$version/smplayer-portable-$version.0-win32-qt5.6.7z",
                "extract_dir": "smplayer-portable"
            }
        }
    }
}
