    "persist": [
        "bios",
        "cheats",
        "patch",
        "savegame",
        "savestate",
        "screenshot",
        "shaders",
        "qt.ini",
        "config.ini",
        "portable.ini"
    ],
    "checkver": {
        "url": "https://mgba.io/builds/1/",
