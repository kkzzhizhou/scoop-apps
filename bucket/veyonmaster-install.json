{
    "version": "4.4.0.0",
    "description": "Computer monitoring and classroom management software.",
    "homepage": "https://veyon.io/",
    "license": "GPL-2.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/veyon/veyon/releases/download/v4.4.0/veyon-4.4.0.0-win64-setup.exe#/setup.exe",
            "hash": "a9b676bdf2c65d49b9fed0f2ca319c137475c5ee85f616d85b0072b556a645f4"
        },
        "32bit": {
            "url": "https://github.com/veyon/veyon/releases/download/v4.4.0/veyon-4.4.0.0-win32-setup.exe#/setup.exe",
            "hash": "24b185f017018d7750dbb4990c0bd261703f04f08189ba0c0d5b387b2c9d25fd"
        }
    },
    "pre_install": [
        "$processname = \"veyon-master\"",
        "$process = Get-Process $processname -ErrorAction SilentlyContinue",
        "if ($process) {",
        "   $process.CloseMainWindow()",
        "   Start-Sleep -Seconds 5",
        "   if (!$process.HasExited) {",
        "       Start-Sleep -Seconds 25",
        "       $process | Stop-Process -Force",
        "   }",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"Veyon*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /S | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "checkver": {
        "url": "https://veyon.io/download/",
        "regex": "veyon-([\\d.]+)-win64-setup.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/veyon/veyon/releases/download/v$majorVersion.$minorVersion.$patchVersion/veyon-$version-win64-setup.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://github.com/veyon/veyon/releases/download/v$majorVersion.$minorVersion.$patchVersion/veyon-$version-win32-setup.exe#/setup.exe"
            }
        }
    }
}
