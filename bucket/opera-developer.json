            "hash": "2c435f47191c2b8f8fb52a30c04d199fc6a63090aab0bf7c634775757be9bab5"
        },
        "32bit": {
            "url": "https://download1.operacdn.com/pub/opera-developer/89.0.4422.0/win/Opera_Developer_89.0.4422.0_Autoupdate.exe#/dl.7z",
