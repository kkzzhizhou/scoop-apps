{
    "version": "1.90.0",
    "description": "Boost C++ Libraries",
    "homepage": "https://www.boost.org/",
    "license": "BSL-1.0",
    "architecture": {
        "64bit": {
            "url": "https://downloads.sourceforge.net/project/boost/boost-binaries/1.90.0/boost_1_90_0-msvc-14.2-64.exe",
            "hash": "sha1:6e241da4b266c7bf4328371e8ae3c9c0bd704f18"
        },
        "32bit": {
            "url": "https://downloads.sourceforge.net/project/boost/boost-binaries/1.90.0/boost_1_90_0-msvc-14.2-32.exe",
            "hash": "sha1:e45cecff5f273941e4aa00612fd8fc39dca1320f"
        }
    },
    "innosetup": true,
    "pre_install": "Get-ChildItem \"$dir/lib$($architecture.Substring(0, 2))-msvc-*.*\" | Rename-Item -NewName lib",
    "env_set": {
        "BOOST_ROOT": "$dir",
        "Boost_INCLUDE_DIR": "$dir\\boost"
    },
    "checkver": {
        "sourceforge": "boost/boost-binaries",
        "regex": "([\\d.]+)+/boost_(?:[\\d_]+)-msvc-14.2-64\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.sourceforge.net/project/boost/boost-binaries/$version/boost_$underscoreVersion-msvc-14.2-64.exe"
            },
            "32bit": {
                "url": "https://downloads.sourceforge.net/project/boost/boost-binaries/$version/boost_$underscoreVersion-msvc-14.2-32.exe"
            }
        }
    }
}
