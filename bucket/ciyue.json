            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\Mumulhl\"",
            "Dismount-ExternalRuntimeData -Target \"$env:LOCALAPPDATA\\Mumulhl\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
