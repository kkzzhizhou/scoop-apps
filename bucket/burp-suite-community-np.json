        "Start-Process \"$dir\\uninstall.exe\" -Wait -Verb 'RunAs' -ArgumentList '-q'; Start-Sleep -Seconds 4"
    ],
    "checkver": {
        "url": "https://portswigger.net/burp/releases/data",
        "jsonpath": "$.ResultSet.Results..version",
        "regex": "([\\d.]+)"
    },
