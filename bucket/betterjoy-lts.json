    "bin": "BetterJoy.exe",
    "shortcuts": [
        [
            "BetterJoy.exe",
            "BetterJoy"
        ]
    ],
    "persist": [
        "BetterJoy.dll.config",
        "settings"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/d3xMachina/BetterJoy/releases/download/v$version/BetterJoy.zip"
            }
        }
    }
