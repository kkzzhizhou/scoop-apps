        "If ($cmd -eq 'uninstall') {",
        "  Remove-Item ${env:APPDATA}\\dev.tormak.steam-art-manager\\* -Force -Recurse;",
        "  Remove-Item ${env:LOCALAPPDATA}\\dev.tormak.steam-art-manager\\* -Force -Recurse",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/Tormak9970/Steam-Art-Manager"
    },
