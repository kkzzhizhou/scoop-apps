            "hash": "f5fb5d3a9e23b14d5c69b81c96a53d88193c6af6d660145dd3b514a1a32dc94e",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
