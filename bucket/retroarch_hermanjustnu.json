{
    "homepage": "https://www.retroarch.com/",
    "version": "1.9.8",
    "license": "GPL-3.0-only",
    "description": "Frontend for emulators, game engines and media players.",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.9.8/windows/x86_64/RetroArch.7z",
            "hash": "ec6e22289b5d3b34678d31efd2452a2774b3919de17ff790e12ec0c934f9561a"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.9.8/windows/x86/RetroArch.7z",
            "hash": "a4e7bd4922c256be7cbdd63fc41ded9ea2d558efd6b5737be1a1bec602221545"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": "retroarch.exe",
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$version/windows/x86/RetroArch.7z"
            }
        }
    }
}
