    },
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.21.0/windows/x86_64/RetroArch.7z",
            "hash": "b3b3cc975f371dc6de83f95c3475a483a617ef65127775cc4142cd17bae6d690",
            "extract_dir": "RetroArch-Win64"
        },
        "32bit": {
