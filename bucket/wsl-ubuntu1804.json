{
    "homepage": "https://www.microsoft.com/store/apps/9N9TNGVNDL3Q",
    "description": "Ubuntu 18.04 LTS on WSL",
    "license": "Proprietary",
    "version": "18.04",
    "url": "https://aka.ms/wsl-ubuntu-1804",
    "shortcuts": [
        [
            "ubuntu1804.exe",
            "Ubuntu 18.04 LTS"
        ]
    ],
    "installer": {
        "script": [
            "Get-Item \"$dir\\wsl-ubuntu-1804\" | Rename-Item -NewName \"ubuntu1804.zip\"",
            "Expand-Archive -Path \"$dir\\ubuntu1804.zip\" -DestinationPath \"$dir\"",
            "Remove-Item \"$dir\\ubuntu1804.zip\""
        ]
    },
    "uninstaller": {
        "script": "wslconfig /u Ubuntu-18.04"
    }
}
