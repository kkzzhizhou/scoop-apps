{
    "version": "6.0.3",
    "description": "Microsoft .NET Desktop Runtime. The .NET Desktop Runtime enables you to run existing Windows desktop applications.",
    "homepage": "https://dotnet.microsoft.com/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://dotnetcli.blob.core.windows.net/dotnet/WindowsDesktop/6.0.3/windowsdesktop-runtime-6.0.3-win-x64.exe#/setup.exe",
            "hash": "sha512:089cb2d98057f6193e2ec9aeda28dd0081b6f2c4b13c6d037903f35703fd84148308a85d0e233d17258bd48d44ce3698e876b858fbb241812d5e437524b34b2f"
        },
        "32bit": {
            "url": "https://dotnetcli.blob.core.windows.net/dotnet/WindowsDesktop/6.0.3/windowsdesktop-runtime-6.0.3-win-x86.exe#/setup.exe",
            "hash": "sha512:ec57c188acefd1f9ff284e9bdee9c978f88651069b7c7a4a7503e2343fd017ab6967d9a4d1b4afd4532e7acc94d6e900aa0b5805a7c3788068a7db1f740a877b"
        }
    },
    "pre_download": "Assert-Administrator",
    "installer": {
        "script": [
            "$programname = \"Microsoft Windows Desktop Runtime*\"",
            "$downloadlink = \"https://dotnet.microsoft.com/download/dotnet/5.0\"",
            "$ProgramFiles = [Environment]::GetFolderPath(\"ProgramFiles\")",
            "$filepath = \"$ProgramFiles\\dotnet\\shared\\Microsoft.NETCore.App\\$version\\\"",
            "if((Test-Path -Path $filepath) -eq $false)",
            "{",
            "   &\"$dir\\setup.exe\" /quiet | Out-Null",
            "   if((Test-Path -Path $filepath) -eq $false)",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "if (Test-Path -Path \"$dir\\setup.exe\") { Remove-Item \"$dir\\setup.exe\" -Force }"
        ]
    },
    "checkver": {
        "url": "https://dotnetcli.blob.core.windows.net/dotnet/release-metadata/releases-index.json",
        "regex": "(?s)([\\d.]+)[^\\d]*?(?<sdkversion>[\\d.]+)[^\\d]*?(?:current|lts)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dotnetcli.blob.core.windows.net/dotnet/WindowsDesktop/$version/windowsdesktop-runtime-$version-win-x64.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://dotnetcli.blob.core.windows.net/dotnet/WindowsDesktop/$version/windowsdesktop-runtime-$version-win-x86.exe#/setup.exe"
            }
        },
        "hash": {
            "url": "https://dotnetcli.blob.core.windows.net/dotnet/checksums/$version-sha.txt",
            "mode": "extract"
        }
    }
}
