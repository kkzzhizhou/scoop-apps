        "} else {",
        "   Move-Item -Path \"$dir\\install_tmp\\LunaTranslator\\*\" -Destination \"$dir\" -Force",
        "}",
        "Remove-Item \"$dir\\install_tmp\" -Force -Recurse"
    ],
    "shortcuts": [
        [
            "LunaTranslator.exe",
            "LunaTranslator"
        ],
        [
            "LunaTranslator_admin.exe",
            "LunaTranslator (Admin)"
        ]
    ],
    "persist": "userconfig",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://github.com/HIllya51/LunaTranslator/releases/download/v$version/LunaTranslator_x86.zip"
            },
            "64bit": {
