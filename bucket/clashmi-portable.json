        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\clashmi\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "bin": "clashmi.exe",
    "shortcuts": [
        [
            "clashmi.exe",
            "clashmi"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/KaringX/clashmi/releases",
        "jp": "$[0].assets[*].browser_download_url",
        "regex": "/releases/download/v([\\d.]+)/clashmi_([\\d.]+)_windows"
    },
    "autoupdate": {
        "architecture": {
