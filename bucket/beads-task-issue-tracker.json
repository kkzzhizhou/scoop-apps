    "hash": "97ef1481635ba44cd108673b54647c4bd134da13476a95e96ea3ee845a8d13da",
    "installer": {
        "args": [
            "/S",
            "/D=$dir"
        ]
    },
    "shortcuts": [
        [
            "beads-issue-tracker.exe",
            "Beads Task-Issue Tracker"
        ]
    ],
    "uninstaller": {
        "file": "uninstall.exe",
        "args": "/S"
    },
    "suggest": {
        "Beads CLI": [
            "r-bucket/beads",
            "r-bucket/beads-rust"
        ]
    },
    "post_install": [
        "if (!(Get-Command 'bd' -ErrorAction SilentlyContinue) -and !(Get-Command 'br' -ErrorAction SilentlyContinue)) {",
        "    Write-Host 'WARNING: No Beads CLI found on PATH. Install one with:' -ForegroundColor Yellow",
        "    Write-Host '  scoop install r-bucket/beads       (Go, bd.exe)' -ForegroundColor Yellow",
        "    Write-Host '  scoop install r-bucket/beads-rust  (Rust, br.exe)' -ForegroundColor Yellow",
        "}"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/w3dev33/beads-task-issue-tracker/releases/download/v$version/Beads.Task-Issue.Tracker_$version_Windows-setup.exe"
    }
}
