{
    "version": "11.1.1",
    "description": "Multiplayer-oriented source port for Doom",
    "homepage": "https://odamex.net/",
    "license": "GPL-2.0-or-later",
    "notes": [
        "Place WAD files (game data) in:",
        "",
        "    $persist_dir\\..\\_doom"
    ],
    "architecture": {
        "32bit": {
            "url": "https://downloads.sourceforge.net/project/odamex/Odamex/11.1.1/odamex-win32-11.1.1.zip",
            "hash": "sha1:50659af938c56a54665382659fc32ffdcce76aaf"
        },
        "64bit": {
            "url": "https://downloads.sourceforge.net/project/odamex/Odamex/11.1.1/odamex-win64-11.1.1.zip",
            "hash": "sha1:962b1021360ddae12917dc2f83d325514ebd5824"
        }
    },
    "pre_install": "New-Item -ItemType Directory -Force -Path $persist_dir\\..\\_doom | Out-Null",
    "env_set": {
        "DOOMWADDIR": "$persist_dir\\..\\_doom"
    },
    "shortcuts": [
        [
            "odamex.exe",
            "Odamex"
        ],
        [
            "odalaunch.exe",
            "Odalaunch"
        ]
    ],
    "checkver": {
        "regex": ">Version ([a-zA-Z\\d.\\-_]+):"
    },
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://downloads.sourceforge.net/project/odamex/Odamex/$version/odamex-win32-$version.zip"
            },
            "64bit": {
                "url": "https://downloads.sourceforge.net/project/odamex/Odamex/$version/odamex-win64-$version.zip"
            }
        }
    }
}
