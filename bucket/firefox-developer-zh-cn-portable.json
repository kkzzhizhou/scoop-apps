        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/128.0b2/win32/zh-CN/Firefox%20Setup%20128.0b2.exe#/firefox-developer.7z",
            "hash": "sha512:951b5168bf38228805d15f09cba7ab69847c51929cb47f1021ceb6fe486aeec7dad92e14da975c471f4b54e78e304ec3c65d79162698f6159375cc6cd47fa4ed"
