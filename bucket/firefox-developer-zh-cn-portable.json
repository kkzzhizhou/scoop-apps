        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/131.0b1/win32/zh-CN/Firefox%20Setup%20131.0b1.exe#/firefox-developer.7z",
            "hash": "sha512:acfca53cc877c77c02819818ec58331226a54a330a139f93e3e640d30a0205577a6ee048ddb13523bfad261eb86e60ffdcb2a9cde04c5a707ee3a95453f67ae6"
