        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/130.0b7/win32/zh-CN/Firefox%20Setup%20130.0b7.exe#/firefox-developer.7z",
            "hash": "sha512:fa2cb17101be284a1a7ceb7c9a77f51cd4eded2e44088fc32664096b63254fc0e53ef9a15273ff56759feff35705d8ed7fd1dacf68422d41bd066354cf2e2ee3"
