        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/134.0b1/win32/zh-CN/Firefox%20Setup%20134.0b1.exe#/firefox-developer.7z",
            "hash": "sha512:fdf5f156aad50d3f30edfe638fd90c47c92cc563a9fa35b560bc7c038c751aa8e6696ef3f3e08736d860668ba02b4e549bf64f437dc39a07f0d04d94e44ce63b"
