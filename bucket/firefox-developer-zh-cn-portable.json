        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/143.0b8/win32/zh-CN/Firefox%20Setup%20143.0b8.exe#/firefox-developer.7z",
            "hash": "sha512:1cd64ef853a1bf61976b0f5b5154587f5ee0af95bed9dfa1da1c5b88cb52b2c1d2a177c67921656a33e47ab379bad298a0b30dd02f0ecc5cc4b8b41a4f163d94"
