        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/129.0b3/win32/zh-CN/Firefox%20Setup%20129.0b3.exe#/firefox-developer.7z",
            "hash": "sha512:fa6136531916d900b0c78d8859f7ed6fc57cf6f48ef0115d707e95643307311b4a7a811e25152ac2e07281fe72ba7a729e6154c821acd162f3aace6c5b2c20ef"
