        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/145.0b5/win32/zh-CN/Firefox%20Setup%20145.0b5.exe#/firefox-developer.7z",
            "hash": "sha512:bc709c8f0f819ab945b44016fedb4f2792ff701d0e6c91bdf5b7ab9924a74ebca864aafa3d2467295348d5ccf07e371490c5a4bced664849a7a1c6580fea4b7d"
