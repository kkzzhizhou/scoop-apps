        },
        "32bit": {
            "url": "https://download-installer.cdn.mozilla.net/pub/devedition/releases/131.0b2/win32/zh-CN/Firefox%20Setup%20131.0b2.exe#/firefox-developer.7z",
            "hash": "sha512:50e0277066da163605087c82f109e3cc5f199e12d36b219c2a34ffd2102de1170cd64900525e4c542bb5583d0355b435ca04f52df305c5f13f15ce4b53fdba5b"
