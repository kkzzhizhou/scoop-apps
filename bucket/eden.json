        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\user\" -ItemType Directory | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\eden\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\eden\\*\" -Destination \"$persist_dir\\user\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\eden\" -Recurse",
        "   }",
        "}"
    ],
    "bin": "eden.exe",
    "shortcuts": [
        [
            "eden.exe",
            "Eden"
        ]
    ],
    "persist": "user",
    "checkver": {
        "github": "https://github.com/eden-emulator/Releases/",
        "regex": "tag/(v?[0-9]+(?:\\.[0-9]+){1,2}(?:-[A-Za-z0-9.-]+)?)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/$version/Eden-Windows-$version-amd64-msvc-standard.zip"
            },
            "arm64": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/$version/Eden-Windows-$version-arm64-msvc-standard.zip"
            }
        }
    }
}
