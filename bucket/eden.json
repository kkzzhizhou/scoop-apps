    "version": "0.1.1",
    "description": "Open source Nintendo Switch emulator (forked from yuzu)",
    "homepage": "https://eden-emu.dev/",
    "license": {
        "identifier": "GPL-3.0-or-later",
        "url": "https://git.eden-emu.dev/eden-emu/eden/raw/branch/master/LICENSE.txt"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/eden-emulator/Releases/releases/download/v0.1.1/Eden-Windows-v0.1.1-amd64-msvc-standard.zip",
            "hash": "0a228af98d8cc2de7bbd1a592b8f2de4ef2a68f4184faf09385336e6853f9618"
        },
        "arm64": {
            "url": "https://github.com/eden-emulator/Releases/releases/download/v0.1.1/Eden-Windows-v0.1.1-mingw-arm64-clang-standard.zip",
            "hash": "aa4cb35d3a0964d5cbc68a21b0e0f2345dbcc1cd7f114d3927082eef3b44042c"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\user\" -ItemType Directory | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\eden\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\eden\\*\" -Destination \"$persist_dir\\user\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\eden\" -Recurse",
        "   }",
        "}"
    ],
    "bin": "eden.exe",
    "shortcuts": [
        [
            "eden.exe",
            "Eden"
        ]
    ],
    "persist": "user",
    "checkver": {
        "github": "https://github.com/eden-emulator/Releases/",
        "regex": "v([\\d]+(?:\\.[\\d]+)+(?:-[A-Za-z\\d.-]+)?)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/v$version/Eden-Windows-v$version-amd64-msvc-standard.zip"
            },
            "arm64": {
                "url": "https://github.com/eden-emulator/Releases/releases/download/v$version/Eden-Windows-v$version-mingw-arm64-clang-standard.zip"
            }
        }
    }
}
