{
    "##": "We install to $dir\\install instead of just $dir because for some reason, Scoop has trouble removing $dir upon uninstallation.",
    "version": "4.0.0.0",
    "homepage": "https://www.biglybt.com",
    "description": "A feature filled, open source, ad-free, bittorrent client.",
    "license": "GPL-2.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/BiglySoftware/BiglyBT/releases/download/v4.0.0.0/GitHub_BiglyBT_Installer64_NoJRE.exe#/setup.exe",
            "hash": "e7be5538af92dace516f88874c511bac5e2cefc6ce13f66f03b38b4e84e3478f"
        },
        "32bit": {
            "url": "https://github.com/BiglySoftware/BiglyBT/releases/download/v4.0.0.0/Github_BiglyBT_Installer32.exe#/setup.exe",
            "hash": "7ecd21ca6aaeaea52dba6bfd4407deec3f8654881e291c2c0e529e69e2436a23"
        }
    },
    "installer": {
        "script": "Start-Process -Wait \"$dir\\setup.exe\" -ArgumentList @('-q', \"-dir `\"$dir\\install`\"\") | Out-Null"
    },
    "post_install": [
        "Remove-Item \"$dir\\setup.exe\"",
        "Remove-Item \"$env:PUBLIC\\Desktop\\BiglyBT.lnk\"",
        "Remove-Item \"$([Environment]::GetFolderPath('commonstartmenu'))\\Programs\\BiglyBT.lnk\""
    ],
    "uninstaller": {
        "file": "install\\uninstall.exe",
        "args": "-q"
    },
    "bin": "install\\BiglyBT.exe",
    "shortcuts": [
        [
            "install\\BiglyBT.exe",
            "BiglyBT"
        ]
    ],
    "checkver": {
        "github": "https://github.com/BiglySoftware/BiglyBT"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/BiglySoftware/BiglyBT/releases/download/v$version/GitHub_BiglyBT_Installer64_NoJRE.exe#/setup.exe"
            },
            "32bit": {
                "url": "https://github.com/BiglySoftware/BiglyBT/releases/download/v$version/Github_BiglyBT_Installer32.exe#/setup.exe"
            }
        },
        "hash": {
            "url": "$baseurl/Github_sha256sum.txt"
        }
    }
}
