    "extract_dir": "gameEditor1.4.1b",
    "pre_install": "ensure $persist_dir | Out-Null; Copy-Item \"$persist_dir\\GameEditor.ini\" \"$dir\\GameEditor.ini\" -ErrorAction 'SilentlyContinue'",
