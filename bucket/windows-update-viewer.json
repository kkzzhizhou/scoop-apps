{
    "version": "0.5.12",
    "description": "Update Manager for Windows. Manage updates of Microsoft products.",
    "homepage": "https://github.com/Timthreetwelve/WUView",
    "license": "GPL-3.0-or-later",
    "url": "https://github.com/Timthreetwelve/WUView/releases/download/v0.5.12/Windows.Update.Viewer_0.5.12.0_NonInstall.zip",
    "hash": "2a2bcbae643524618eb8eb844a54af478d9e8f55c842d1df24f4e32327a6bd3c",
    "extract_dir": "Windows Update Viewer",
    "pre_install": [
        "$userSetting = 'usersettings.json'",
        "if (!(Test-Path \"$persist_dir\\$userSetting\")) {",
        "    Write-Host 'File' $userSetting 'does not exists. Creating.' -f Yellow",
        "    $CONT = @('{\"HideExcluded\": true}')",
        "    Set-Content \"$dir\\$userSetting\" ($CONT -join \"`r`n\") -Encoding UTF-8",
        "}",
        "$excludes = 'WUViewExcludes.json'",
        "if (!(Test-Path \"$persist_dir\\$excludes\")) {",
        "    Write-Host 'File' $excludes 'does not exists. Creating.' -f Yellow",
        "    $CONT = @('[{\"ExcludedString\": \"Defender\"}]')",
        "    Set-Content \"$dir\\$excludes\" ($CONT -join \"`r`n\") -Encoding UTF-8",
        "}"
    ],
    "bin": "WUView.exe",
    "shortcuts": [
        [
            "WUView.exe",
            "Windows Update Viewer"
        ]
    ],
    "persist": [
        "usersettings.json",
        "WUViewExcludes.json"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Timthreetwelve/WUView/releases/download/v$version/Windows.Update.Viewer_$version.0_NonInstall.zip"
    }
}
