{
    "version": "1.2.4",
    "description": " Cyber Security ALL-IN-ONE Platform 交互式应用安全测试平台 ",
    "homepage": "https://github.com/yaklang/yakit",
    "notes": "https://github.com/ViCrack/scoop-bucket/blob/master/bucket/yakit.json，会将yakit自动添加到防火墙允许规则中",
    "license": "AGPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://yaklang.oss-cn-beijing.aliyuncs.com/yak/1.2.4/Yakit-1.2.4-windows-amd64.exe#/dl.7z",
            "hash": "fe42d22dd4fd8969a8cbfb4e5a0a731670c31d9c32982052a2aaf6b6c53d8369",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*\" -Force -Recurse"
            ]
        }
    },
    "post_install": [
        "$existingRule = Get-NetFirewallRule -DisplayName yakit.exe -ErrorAction SilentlyContinue",
        "if ($existingRule) {  Set-NetFirewallRule -DisplayName yakit.exe -Action Allow -Enabled True -Program \"$dir\\yakit.exe\" }",
        "else { New-NetFirewallRule -DisplayName yakit.exe -Action Allow -Enabled True -Program \"$dir\\yakit.exe\" }"
    ],
    "shortcuts": [
        [
            "Yakit.exe",
            "Yakit"
        ]
    ],
    "checkver": {
        "url": "https://github.com/yaklang/yakit/releases/latest",
        "regex": "/releases/tag/(?:v|V)?([\\d.]+(-sp\\d)?)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://yaklang.oss-cn-beijing.aliyuncs.com/yak/$version/Yakit-$version-windows-amd64.exe#/dl.7z"
            }
        }
    }
}
