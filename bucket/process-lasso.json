{
    "homepage": "https://bitsum.com/",
    "description": "Real-Time CPU Optimization and Automation",
    "version": "17.0.1+rel.01.01.2026.0409",
    "license": "Freemium",
    "url": "https://dl.bitsum.com/files/processlassosetup64.exe#/dl.7z",
    "hash": "03fcd5d1dbca0e60ced304a1c6aaa2973a95a0d0cdb6288093c68d63dec2147d",
    "extract_to": "Process Lasso",
    "shortcuts": [
        [
            "Process Lasso/ProcessLassoLauncher.exe",
            "Process Lasso"
        ]
    ],
    "persist": [
        "Process Lasso/config",
        "Process Lasso/logs"
    ],
    "installer": {
        "script": "Remove-Item \"$dir/Process Lasso/`$PLUGINSDIR\" -Recurse"
    },
    "checkver": {
        "script": [
            "$changes = Invoke-WebRequest -Uri 'https://bitsum.com/changes/processlasso'",
            "$latest_vers = $changes.Links | ForEach-Object {$_.outerHTML | Select-String \"([\\d.]+[^-]+) - ([^<]+)\"}",
            "$latest_release = $latest_vers | Sort-Object {Get-Date $_.Matches.Groups[2].Value} | Select-Object -last 1",
            "$base_version = $latest_release.Matches.Groups[1].Value.ToLower() -replace \"\\s\", \"-\"",
            "$current_version_details = Invoke-WebRequest -Uri 'https://bitsum.com/current_version_processlasso.txt' -UseBasicParsing",
            "$content = $current_version_details.Content -split \"`n\" | Where-Object {$_ -ne ''}",
            "$beta_revision = $null",
            "$revision_line = $content | Select-String \"^\\((\\d+)\\)\" -CaseSensitive | Select-Object -first 1",
            "if ($revision_line) {",
            "    $beta_revision = $revision_line.Matches.Groups[1].Value",
            "}",
            "$date_time_format = \"dd.MM.yyyy\"",
            "$release_date_time = $null",
            "$last_lines = $content[-2..-1] ",
            "if ($last_lines.Count -eq 2) {",
            "    $full_date_string = \"$($last_lines[0].Trim()) $($last_lines[1].Trim())\"",
            "    try {",
            "        $release_date_time = Get-Date $full_date_string",
            "        if ($release_date_time.Hour -ne 0 -or $release_date_time.Minute -ne 0) {",
            "            $date_time_format = \"dd.MM.yyyy.HHmm\" # Include Hour and Minute",
            "        }",
            "    } catch {",
            "        $release_date_time = Get-Date $latest_release.Matches.Groups[2].Value",
            "    }",
            "} else {",
            "    $release_date_time = Get-Date $latest_release.Matches.Groups[2].Value",
            "}",
            "$semver_suffix = \"\"",
            "$url_segment = \"\"",
            "if ($base_version -match 'beta') {",
            "    $url_segment = 'beta/'",
            "    if ($beta_revision) {",
            "        $semver_suffix = \".$beta_revision\"",
            "    }",
            "}",
            "$semver_metadata = \"+rel.$($release_date_time.ToString($date_time_format))\"",
            "$semver = \"$base_version$semver_suffix$semver_metadata\"",
            "Write-Output \"$url_segment $semver\""
        ],
        "regex": "(?<url>[\\w/]*)\\s(?<version>[\\d\\w\\.\\-\\+]+)"
    },
    "autoupdate": {
        "url": "https://dl.bitsum.com/files/$matchUrlprocesslassosetup64.exe#/dl.7z"
    }
}
