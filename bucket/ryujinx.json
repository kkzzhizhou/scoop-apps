{
    "homepage": "https://ryujinx.org/",
    "description": "Nintendo Switch emulator",
    "version": "1.1.58",
    "license": "MIT",
    "notes": [
        "ATTENTION: Ryujinx requires Nintendo Switch firmware and a prod.keys file to function.",
        "Learn more at https://github.com/Ryujinx/Ryujinx/wiki/Ryujinx-Setup-&-Configuration-Guide"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Ryujinx/release-channel-master/releases/download/1.1.58/ryujinx-1.1.58-win_x64.zip",
            "hash": "e2613d506e1029b70a4893208da9652cf86542a73d0dbe0dffd661abc190dda0"
        }
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Ryujinx/release-channel-master/releases/download/$version/ryujinx-$version-win_x64.zip"
            }
        }
    },
    "bin": "Ryujinx.exe",
    "checkver": {
        "github": "https://github.com/Ryujinx/release-channel-master"
    },
    "extract_dir": "publish",
    "persist": "portable",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\\portable\" -ItemType Directory | Out-Null",
        "   if (Test-Path \"$env:APPDATA\\Ryujinx\") {",
        "       Write-host \"Migrating AppData...\" -ForegroundColor yellow",
        "       Copy-Item -Path \"$env:APPDATA\\Ryujinx\\*\" -Destination \"$persist_dir\\portable\" -Recurse",
        "       Remove-Item -Path \"$env:APPDATA\\Ryujinx\" -Recurse",
        "   }",
        "}"
    ],
    "shortcuts": [
        [
            "Ryujinx.exe",
            "Ryujinx"
        ]
    ]
}
