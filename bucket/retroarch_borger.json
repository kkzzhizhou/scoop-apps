{
    "homepage": "https://www.retroarch.com/",
    "description": "Frontend for emulators, game engines and media players.",
    "license": "GPL-3.0-only",
    "version": "1.9.9",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.9.9/windows/x86_64/RetroArch.7z",
            "hash": "2abadbc5baafd9b682094fbeb4cd5b2864e90cf8b1894ed1be16060246d04f44"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.9.9/windows/x86/RetroArch.7z",
            "hash": "4c43d9f1d988829aa972571f4bf2768f58e2b76b516d5c3e4f1bd4ceaeaef730"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": [
        [
            "retroarch.exe",
            "retroarch"
        ]
    ],
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: (?<main>[\\d.]+)(\\s*(\\(|\\[)(\\w+)(\\)|\\]))?",
        "replace": "${5}${3}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$matchMain/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$matchMain/windows/x86/RetroArch.7z"
            }
        }
    }
}
