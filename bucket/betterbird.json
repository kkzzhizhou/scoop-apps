    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.betterbird.eu/downloads/WindowsPortable/BetterbirdPortable-$version.en-US.win64.zip",
                "hash": {
                    "url": "https://www.betterbird.eu/downloads/sha256-$majorVersion.txt",
                    "regex": "^$sha256\\s+\\*$basename$"
                }
            }
        }
    }
