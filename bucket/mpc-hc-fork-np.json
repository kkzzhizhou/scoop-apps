        },
        "32bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.4.1/MPC-HC.2.4.1.x86.exe#/setup.exe",
            "hash": "b94f3cc4f797a1b22a2886b2242f71a1282c876c87b0002ea0540e8ac12f15c1"
