        "32bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.3.9/MPC-HC.2.3.9.x86.exe#/setup.exe",
            "hash": "84f3b50afbf0918561853e27a51c249521b5937caf6c5d4edbb7d39a61cdc907"
