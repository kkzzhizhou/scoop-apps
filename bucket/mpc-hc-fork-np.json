        },
        "32bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.1.3/MPC-HC.2.1.3.x86.exe#/setup.exe",
            "hash": "2fb8c441c0da296780fbd50b740736aaa1e06eebdd5b7773646e438c41b22665"
