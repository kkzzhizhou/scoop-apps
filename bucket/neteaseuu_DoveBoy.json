    "checkver": {
        "script": [
            "$url = 'https://adl.netease.com/d/g/uu/c/gw?type=pc'",
            "$response = Invoke-WebRequest -Uri $url -UseBasicParsing",
            "Write-Output $response.Content"
        ],
        "regex": "pc_link = \"https://.*?.gdl.netease.com/(?<build>\\d+)/UU-(?<ver>[\\d.]+).exe",
        "replace": "${ver}.${build}"
    },
