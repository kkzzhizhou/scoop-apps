    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name extras-cn) scripts/AppsUtils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\appdata\" -Target \"$env:APPDATA\\clashmi\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name extras-cn) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\clashmi\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "bin": "clashmi.exe",
    "shortcuts": [
        [
            "clashmi.exe",
            "clashmi"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/KaringX/clashmi/releases",
        "jp": "$[0].assets[*].browser_download_url",
        "regex": "/releases/download/v([\\d.]+)/clashmi_([\\d.]+)_windows"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/KaringX/clashmi/releases/download/v$version/clashmi_$version_windows_x64.zip"
            }
        }
    }
