    },
    "pre_install": [
        "$null = if (!(Test-Path \"$persist_dir/config\")) {",
        "    $configdir = (New-Item -ItemType Directory \"$dir/config\").FullName",
        "    New-Item \"$configdir/config.toml\"",
        "    New-Item -ItemType Directory \"$configdir/themes\"",
        "}"
    ],
    "persist": "config",
    "bin": [
        [
            "nyaa.exe",
            "nyaa",
            "--config=\"$dir/config\""
        ]
    ],
