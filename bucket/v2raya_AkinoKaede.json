{
    "version": "2.2.1",
    "description": "A web GUI client of Project V which supports V2Ray, Xray, SS, SSR, Trojan and Pingtunnel.",
    "homepage": "https://github.com/v2rayA/v2rayA",
    "license": "AGPL-3.0-only",
    "suggest": {
        "v2ray": "v2ray"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/v2rayA/v2rayA/releases/download/v2.2.1/v2raya_windows_x64_2.2.1.exe",
            "hash": "15c9bbc377e1f2e2ca936cef65c63d2626cded05ee85d50f35fdbbbe30ffb979"
        }
    },
    "pre_install": [
        "if (-not (Test-Path \"$persist_dir\\config\")) {",
        "    ensure \"$dir\\config\" | Out-Null",
        "}"
    ],
    "installer": {
        "script": "Move-Item \"$dir\\v2raya_windows_x64_*\" -Destination \"$dir\\v2raya.exe\""
    },
    "bin": [
        [
            "v2raya.exe",
            "v2raya",
            "--lite",
            "--config=$dir\\config"
        ]
    ],
    "persist": "config",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/v2rayA/v2rayA/releases/download/v$version/v2raya_windows_x64_$version.exe"
            }
        }
    }
}
