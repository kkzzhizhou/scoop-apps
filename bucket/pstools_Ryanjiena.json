                [
                    "pskill64.exe",
                    "pskill"
                ],
                "pslist64.exe",
                [
                    "pslist64.exe",
                    "pslist"
                ],
                "PsLoggedon64.exe",
                [
                    "PsLoggedon64.exe",
                    "PsLoggedon"
                ],
                "psloglist64.exe",
                [
                    "psloglist64.exe",
                    "psloglist"
                ],
                "pspasswd64.exe",
                [
                    "pspasswd64.exe",
                    "pspasswd"
                ],
                "psping64.exe",
                [
                    "psping64.exe",
                    "psping"
                ],
                "PsService64.exe",
                [
                    "PsService64.exe",
                    "PsService"
                ],
                "psshutdown64.exe",
                [
                    "psshutdown64.exe",
                    "psshutdown"
                ],
                "pssuspend64.exe",
                [
                    "pssuspend64.exe",
                    "pssuspend"
                ]
