{
    "version": "2.5",
    "description": "Nintendo Wii U emulator",
    "homepage": "https://cemu.info",
    "license": {
        "identifier": "MPL-2.0",
        "url": "https://github.com/cemu-project/Cemu/blob/main/LICENSE.txt"
    },
    "suggest": {
        "Microsoft Visual C++ Runtime 2022": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/cemu-project/Cemu/releases/download/v2.5/cemu-2.5-windows-x64.zip",
            "hash": "73221d437176903af317f5d67b16374d3e4485ed6ae5b3a976d26be69e3f15ab"
        }
    },
    "extract_dir": "Cemu_2.5",
    "installer": {
        "script": [
            "if (!(Test-Path \"$persist_dir\\keys.txt\")) {",
            "    New-Item \"$dir\\keys.txt\" -Type File | Out-Null",
            "}"
        ]
    },
    "post_install": [
        "'settings.xml' | ForEach-Object {",
        "   if (Test-Path \"$persist_dir\\$_.bak\") {",
        "       Copy-Item \"$persist_dir\\$_.bak\" \"$dir\\$_\"  -Force",
        "   } else {",
        "       New-Item -ItemType File \"$dir\\$_\" | Out-Null",
        "   }",
        "}"
    ],
    "bin": [
        [
            "Cemu.exe",
            "cemu-dev"
        ]
    ],
    "shortcuts": [
        [
            "Cemu.exe",
            "Nintendo Wii U [wiiu][cemu] (dev)"
        ]
    ],
    "persist": [
        "controllerProfiles",
        "gameProfiles",
        "graphicPacks",
        "mlc01",
        "sharedFonts",
        "shaderCache\\transferable",
        "keys.txt"
    ],
    "uninstaller": {
        "script": [
            "'settings.xml' | ForEach-Object {",
            "   Copy-Item \"$dir\\$_\" \"$persist_dir\\$_.bak\" -Force",
            "}"
        ]
    },
    "checkver": {
        "url": "https://github.com/cemu-project/Cemu/releases",
        "regex": "Cemu (?<ver>\\d+\\.\\d+)",
        "replace": "${1}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/cemu-project/Cemu/releases/download/v$matchVer/cemu-$matchVer-windows-x64.zip"
            }
        },
        "extract_dir": "Cemu_$matchVer"
    }
}
