{
    "version": "8.30.310",
    "description": "Logitech Options software lets you customize your device's settings",
    "homepage": "https://www.logitech.com/en-us/product/options",
    "license": "",
    "notes": "",
    "url": "https://download01.logi.com/web/ftp/pub/techsupport/options/Options_8.30.310.exe#/setup.exe",
    "hash": "877a13ae7698cf7de444c501967c909c1ad8e60c696c9cf37b5752d11b741927",
    "pre_install": [
        "$processname = \"LogiOptions\"",
        "$process = Get-Process $processname -ErrorAction SilentlyContinue",
        "if ($process) {",
        "   $process.CloseMainWindow()",
        "   Start-Sleep -Seconds 5",
        "   if (!$process.HasExited) {",
        "       Start-Sleep -Seconds 25",
        "       $process | Stop-Process -Force",
        "   }",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"Logitech Options*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /S | Out-Null",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "checkver": {
        "url": "https://chocolatey.org/packages/logitech-options#files",
        "regex": "Downloads of v ([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://download01.logi.com/web/ftp/pub/techsupport/options/Options_$version.exe#/setup.exe"
    }
}
