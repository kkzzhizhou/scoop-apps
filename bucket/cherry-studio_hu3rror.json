        },
        "arm64": {
            "url": "https://github.com/CherryHQ/cherry-studio/releases/download/v1.6.1/Cherry-Studio-1.6.1-arm64-setup.exe#/dl.7z",
            "hash": "sha512:2820c323009bff72cc5a458a6792d6f8969a01386e0a1093c16914412b1df88e568c9ca33907178ab1d97f6b9b44e45536c2f4be82c89c54bb70817cf70959f7",
