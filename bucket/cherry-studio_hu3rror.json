            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Unintall*\" -Recurse"
            ]
        },
        "arm64": {
            "url": "https://github.com/CherryHQ/cherry-studio/releases/download/v1.5.4/Cherry-Studio-1.5.4-arm64-setup.exe#/dl.7z",
            "hash": "sha512:2699551f5bd74db8b1f285f9af67e7753c15a0cc263071137ee9fa38cf173ffe0dfb5ca0e7810c3748f24445e8c7233786319f3e92a2d5c54bcd4c04bc79301d",
