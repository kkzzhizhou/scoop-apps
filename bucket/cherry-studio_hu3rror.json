            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Unintall*\" -Recurse"
            ]
        },
        "arm64": {
            "url": "https://github.com/CherryHQ/cherry-studio/releases/download/v1.7.2/Cherry-Studio-1.7.2-arm64-setup.exe#/dl.7z",
            "hash": "sha512:b2a9bcb8df21f9b711512a985deac117dbb954e8a1c1a53f60acd409b3c594ed6611f718ad8131d467fbe56a2d803dd91a33781eee1ff6963874b0d0dce6a558",
