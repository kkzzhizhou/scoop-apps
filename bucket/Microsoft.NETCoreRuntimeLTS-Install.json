            "   &\"$dir\\setup.exe\" /install /quiet /norestart | Out-Null",
            "   if((Get-ItemProperty -LiteralPath \"$regPath\").DisplayVersion -lt [Version]\"$version\")",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "if (Test-Path -Path \"$dir\\setup.exe\") { Remove-Item \"$dir\\setup.exe\" -Force }"
