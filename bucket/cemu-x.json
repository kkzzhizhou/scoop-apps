{
    "$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
    "homepage": "https://cemu.info/",
    "version": "1.25.2",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://cemu.info/releases/cemu_1.25.2.zip",
            "hash": "c8d660fc7b65243f798f79c7bae2c04042a4d3e3531d7d5148c505216e8b1d10"
        }
    },
    "extract_dir": "cemu_1.25.2",
    "shortcuts": [
        [
            "cemu.exe",
            "Cemu"
        ]
    ],
    "installer": {
        "script": [
            "if (!(Test-Path \"$persist_dir\\settings.xml\")) {",
            "    New-Item \"$dir\\settings.xml\" -Type File | Out-Null",
            "}"
        ]
    },
    "persist": [
        "settings.xml",
        "controllerProfiles",
        "gameProfiles",
        "graphicPacks",
        "mlc01",
        "shaderCache\\transferable",
        "sharedFonts"
    ],
    "suggest": {
        "vcredist": "extras/vcredist2015",
        "cemuhook": "cemuhook"
    },
    "checkver": {
        "regex": "Download latest version \\(v((?<version>[\\d.]+)[\\w]*?),"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cemu.info/releases/cemu_$matchVersion.zip"
            }
        },
        "extract_dir": "cemu_$matchVersion"
    }
}
