  "depends": "mochi/qv2ray-beta",
  "architecture": {
    "64bit": {
      "url": "https://download.fastgit.org/Qv2ray/QvPlugin-Command/releases/download/v3.0.0-pre1/QvPlugin-Command.v3.0.0-pre1.Windows-x64.dll",
      "hash": "c13ff13958817bc707be49512d0886dd3669d235aabe0a1ee15e473f248c2d3e"
    },
    "32bit": {
      "url": "https://download.fastgit.org/Qv2ray/QvPlugin-Command/releases/download/v3.0.0-pre1/QvPlugin-Command.v3.0.0-pre1.Windows-x86.dll",
      "hash": "ac874bc4d0dce54b940c454fcab2e95164eda0eaf32f3224e89903af6779ef36"
    }
  },
  "installer": {
    "script": [
      "function LinkFile([String] $file, [String] $source = $file) {",
      "    Write-Host \"Creating hardlink for $file\"",
      "    New-Item -Force -ItemType HardLink -Path \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\" -Name $file -Target \"$dir\\$source\" | Out-Null",
      "}",
      "LinkFile 'command.dll' '*.dll'"
    ]
  },
  "uninstaller": {
    "script": "Remove-Item \"$(appdir qv2ray-beta $global)\\current\\config\\plugins\\command.dll\" -Force"
  },
  "checkver": {
    "url": "https://github.com/Qv2ray/QvPlugin-Command/releases",
    "regex": "/releases/tag/(?:v|V)?([\\w.-]+)"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://download.fastgit.org/Qv2ray/QvPlugin-Command/releases/download/v$version/QvPlugin-Command.v$version.Windows-x64.dll"
      },
      "32bit": {
        "url": "https://download.fastgit.org/Qv2ray/QvPlugin-Command/releases/download/v$version/QvPlugin-Command.v$version.Windows-x86.dll"
      }
    },
    "hash": {
      "url": "https://github.com/Qv2ray/QvPlugin-Command/releases/download/v$version/sha256.list"
    }
  }
}
