            "}",
            "$BodyTemplate = @(",
            "    '<?xml version=\"1.0\" encoding=\"UTF-8\"?>',",
            "    '<request protocol=\"3.0\">',",
            "    '  <os platform=\"win\" version=\"10.0.22000.0\" arch=\"{0}\"/>',",
