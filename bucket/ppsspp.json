{
    "version": "1.14.2",
    "description": "Sony PlayStation Portable (PSP) emulator",
    "homepage": "https://www.ppsspp.org",
    "license": "GPL-2.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://ppsspp.org/files/1_14_2/ppsspp_win.zip",
            "hash": "cf1e04aa48e694436eda739af287981b0ddd0370e0660fd3dd74d9f0a5e10667",
            "bin": [
                [
                    "PPSSPPWindows64.exe",
                    "ppsspp"
                ]
            ],
            "shortcuts": [
                [
                    "PPSSPPWindows64.exe",
                    "PPSSPP"
                ]
            ]
        },
        "arm64": {
            "url": "https://ppsspp.org/files/1_14_2/PPSSPPWindowsARM64.zip",
            "hash": "a3747ab17fed8c9eee21679f2b99a0356934320dbac3559d1eb09ad392d9c30f",
            "bin": [
                [
                    "PPSSPPWindowsARM64.exe",
                    "ppsspp"
                ]
            ],
            "shortcuts": [
                [
                    "PPSSPPWindowsARM64.exe",
                    "PPSSPP"
                ]
            ]
        }
    },
    "extract_dir": "ppsspp",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\memstick\" -ItemType Directory | Out-Null",
        "}"
    ],
    "persist": [
        "assets",
        "demos",
        "memstick"
    ],
    "checkver": {
        "url": "https://www.ppsspp.org/downloads.html",
        "regex": "Download ([\\d.]+) zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ppsspp.org/files/$underscoreVersion/ppsspp_win.zip"
            },
            "arm64": {
                "url": "https://ppsspp.org/files/$underscoreVersion/PPSSPPWindowsARM64.zip"
            }
        }
    }
}
