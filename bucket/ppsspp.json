    "license": "GPL-2.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://ppsspp.org/files/1_14_3/ppsspp_win.zip",
            "hash": "a89431ff383fb27cc32d3c450b4c84b88a4b06954794e51fe3108c063194dbf8",
            "bin": [
                [
                    "PPSSPPWindows64.exe",
                    "ppsspp"
                ]
            ],
            "shortcuts": [
                [
                    "PPSSPPWindows64.exe",
                    "PPSSPP"
                ]
            ]
        },
        "arm64": {
            "url": "https://ppsspp.org/files/1_14_3/PPSSPPWindowsARM64.zip",
            "hash": "81d26ff12674010608a1e35f91fa043652447c73c9d6114aed616df03da7ff71",
            "bin": [
                [
                    "PPSSPPWindowsARM64.exe",
                    "ppsspp"
                ]
            ],
            "shortcuts": [
                [
                    "PPSSPPWindowsARM64.exe",
                    "PPSSPP"
                ]
            ]
        }
    },
    "extract_dir": "ppsspp",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "   New-item \"$persist_dir\" -ItemType Directory | Out-Null",
        "   New-item \"$persist_dir\\memstick\" -ItemType Directory | Out-Null",
        "}"
    ],
    "persist": [
        "assets",
        "demos",
        "memstick"
    ],
    "checkver": {
        "url": "https://www.ppsspp.org/downloads.html",
        "regex": "Download ([\\d.]+) zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ppsspp.org/files/$underscoreVersion/ppsspp_win.zip"
            },
            "arm64": {
                "url": "https://ppsspp.org/files/$underscoreVersion/PPSSPPWindowsARM64.zip"
            }
        }
    }
