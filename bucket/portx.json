{
    "version": "2.1.1",
    "description": "A free cross-plaftorm SSH client for syncing session files across multiple devices.",
    "homepage": "https://portx.online/",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://cdn.netsarang.net/0ac7ea20/PortX-2.1.1-Setup.exe#/dl.7z",
            "hash": "ee64c8d8d35983928b5c4cbb9b1e9076b6c5c53e73f00dec3d2a6bfd8a9866ab",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall*\" -Force -Recurse"
            ]
        }
    },
    "bin": [
        [
            "PortX.exe",
            "PortX",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "shortcuts": [
        [
            "PortX.exe",
            "PortX",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "persist": "User Data",
    "checkver": {
        "url": "https://community.chocolatey.org/packages/portx",
        "regex": "/package/portx/([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.netsarang.net/0ac7ea20/PortX-$version-Setup.exe#/dl.7z",
                "hash": {
                    "url": "https://community.chocolatey.org/packages/portx",
                    "regex": "&#39;$sha256"
                }
            }
        }
    }
}
