    "checkver": {
        "github": "https://github.com/melonDS-emu/melonDS",
        "regex": "/releases/tag/(?:v|V)?([\\w.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/melonDS-emu/melonDS/releases/download/$version/melonDS-windows-x86_64.zip"
    }
