        "Write-Host \"Please wait and don't cancel the script...\" -F 'Yellow'",
        "Start-Process 'msiexec' -Wait -Verb 'RunAs' -WindowStyle 'Hidden' -ArgumentList @('/x', \"$dir\\setup.msi_\", '/qn')"
