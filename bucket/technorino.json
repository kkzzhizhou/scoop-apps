{
    "version": "22506085202",
    "description": "Chat client for twitch.tv. Only nightlies are supported (fork of Chatterino 2).",
    "homepage": "https://github.com/2547techno/technorino",
    "license": "MIT",
    "suggest": {
        "vcredist-aio": "extras/vcredist-aio"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/2547techno/technorino/releases/download/nightly-build/chatterino-windows-x86-64-Qt-6.9.3.zip",
            "hash": "c7cfb3bd29267798c29c3003626979ca85111da3127e62e8df96585a5b246a6c"
        }
    },
    "extract_dir": "Chatterino2",
    "pre_install": [
        "Get-ChildItem \"$dir/chatterino.exe\" | Rename-Item -NewName { $_.name.Replace('chatte', 'techno') }",
        "'externally-packaged' | Out-File -Encoding utf8 -Append \"$dir/modes\""
    ],
    "shortcuts": [
        [
            "technorino.exe",
            "technorino"
        ]
    ],
    "bin": "technorino.exe",
    "checkver": {
        "script": [
            "try {",
            "    $null = (Invoke-WebRequest https://raw.githubusercontent.com/2547techno/technorino/technorino/.github/workflows/build.yml).Content -cmatch 'os: windows-latest\\s+qt-version: ([\\d.]+)'",
            "    $Matches[1],",
            "    (Invoke-RestMethod 'https://api.github.com/repositories/604452497/actions/workflows/build.yml/runs?branch=technorino&status=success&per_page=1' -Headers $(if ($auth = Get-GitHubToken) { @{authorization=\"Bearer $auth\"} })).workflow_runs[0].id -join ' '",
            "}",
            "catch { '' }"
        ],
        "regex": "\\A(?<qt>[\\d.]+) (\\d+)\\Z"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/2547techno/technorino/releases/download/nightly-build/chatterino-windows-x86-64-Qt-$matchQt.zip",
                "hash": {
                    "url": "https://api.github.com/repositories/604452497/actions/runs/$version/artifacts",
                    "jsonpath": "$.artifacts[?(@.name == 'chatterino-windows-x86-64-qt-$matchQt.zip')].digest",
                    "regex": "\\Asha256:$sha256\\Z"
                }
            }
        }
    }
}
