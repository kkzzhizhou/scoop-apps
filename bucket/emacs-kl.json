{
    "$schema": "https://raw.githubusercontent.com/ScoopInstaller/Scoop/master/schema.json",
    "homepage": "https://github.com/kiennq/emacs-build",
    "license": "GPLv3",
    "version": "31.359.20250603.79b1e04",
    "url": "https://github.com/kiennq/emacs-build/releases/download/v31.359.20250603.79b1e04/emacs-79b1e04-ucrt-x86_64-mps.msix",
    "hash": "126edca541dfa40fec9d599e95b9728cfe174f093190d4bdc41c592f0cd9db34",
    "installer": {
        "script": [
            "Get-ChildItem \"$dir\\*.msix\" | %{Expand-7zipArchive $_.FullName \"$dir\"}",
            "Remove-Item -Force \"$dir\\*.msix\"",
            "Push-Location \"$dir\"",
            "dir 'bin\\*%2b*' | %{ren \"$_\" \"$($_.Name -replace '%2b','+')\"}",
            "Pop-Location"
        ]
    },
    "bin": [
        "bin\\runemacs.exe",
        "bin\\emacs.exe",
        "bin\\emacsclient.exe",
        "bin\\emacsclientw.exe",
        [
            "bin\\emacsclientw.exe",
            "emw",
            "-c -n -a \"\""
        ]
    ],
    "checkver": {
        "github": "https://github.com/kiennq/emacs-build",
        "regex": "/tag/v([\\d\\w.-]+)"
    },
    "autoupdate": {
        "url": "https://github.com/kiennq/emacs-build/releases/download/v$version/emacs-$buildVersion-ucrt-x86_64-mps.msix"
    },
    "shortcuts": [
        [
            "bin\\runemacs.exe",
            "Emacs"
        ],
        [
            "bin\\emacsclientw.exe",
            "Emacs Client",
            "-c -n -a \"\""
        ]
    ]
}
