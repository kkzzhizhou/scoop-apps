        }
    },
    "bin": [
        [
            "strelaysrv.exe",
            "strelaysrv",
            "-keys \"$dir\""
        ]
    ],
    "persist": [
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
