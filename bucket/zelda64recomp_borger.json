{
    "version": "1.2.1",
    "description": "A PC port of Legend of Zelda: Ocarina of Time and Majora's Mask",
    "homepage": "https://github.com/Zelda64Recomp/Zelda64Recomp",
    "license": "Unlicense",
    "notes": [
        "ATTENTION: Zelda64Recomp requires specific n64 rom(s) of Legend of Zelda: OoT and Majora's Mask to function.",
        "Place the rom(s) in $persist_dir."
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Zelda64Recomp/Zelda64Recomp/releases/download/v1.2.1/Zelda64Recompiled-v1.2.1-Windows.zip",
            "hash": "49a35c1c648e24a58164ae25808622d182bc5f7cf311bfd72f01832fcc955717"
        }
    },
    "post_install": "Set-Content -Value $null -Path \"$dir\\portable.txt\"",
    "bin": "Zelda64Recompiled.exe",
    "shortcuts": [
        [
            "Zelda64Recompiled.exe",
            "Zelda 64 Recompiled[win][oot][mm]"
        ]
    ],
    "persist": "mods",
    "checkver": {
        "github": "https://github.com/Zelda64Recomp/Zelda64Recomp/",
        "regex": "v(?<version>([\\d\\.]+))",
        "replace": "${version}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Zelda64Recomp/Zelda64Recomp/releases/download/v$version/Zelda64Recompiled-v$version-Windows.zip"
            }
        }
    }
}
