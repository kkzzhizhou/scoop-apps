    },
    "architecture": {
        "64bit": {
            "url": "https://update.code.visualstudio.com/1.52.1/win32-x64/stable#/setup.exe",
            "hash": "e2165f33adabd453c2f037cec4a5ae5f227cc3b81ef3994ca645ecb578afc4df"
        },
        "32bit": {
            "url": "https://update.code.visualstudio.com/1.52.1/win32/stable#/setup.exe",
            "hash": "f1bf1c0b68ae37f212deef2329cdcbd07be05f19a21d5fbe3fd8af68af8ea49c"
        }
    },
    "pre_install": [
        "$processname = \"Code\"",
        "$process = Get-Process $processname -ErrorAction SilentlyContinue",
        "if ($process) {",
        "   $process.CloseMainWindow()",
        "   Start-Sleep -Seconds 5",
        "   if (!$process.HasExited) {",
        "       Start-Sleep -Seconds 25",
        "       $process | Stop-Process -Force",
        "   }",
        "}"
    ],
    "installer": {
        "script": [
            "$programname = \"Microsoft Visual Studio Code*\"",
            "if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "{",
            "   &\"$dir\\setup.exe\" /VERYSILENT /MERGETASKS=!runcode,!desktopicon,!quicklaunchicon,addcontextmenufiles,addcontextmenufolders,associatewithfiles,addtopath | Out-Null",
            "   if(!(Get-Package -Provider Programs -IncludeWindowsInstaller -Name \"$programname\" -MinimumVersion $version -ErrorAction SilentlyContinue))",
            "   {",
            "       exit 1",
            "   }",
            "}",
            "Remove-Item \"$dir\\setup.exe\" -Force"
        ]
    },
    "checkver": {
        "url": "https://code.visualstudio.com/sha?build=stable",
        "jsonpath": "$.products[?(@.platform.os == 'win32-x64-archive')].name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://update.code.visualstudio.com/$version/win32-x64/stable#/setup.exe"
            },
            "32bit": {
                "url": "https://update.code.visualstudio.com/$version/win32/stable#/setup.exe"
            }
        }
    }
}
