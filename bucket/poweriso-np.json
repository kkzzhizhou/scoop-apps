                    "    Stop-Process -Name 'PWRISOVM', 'explorer' -ErrorAction 'SilentlyContinue' -Force",
                    "    Start-Process \"${env:ProgramFiles(x86)}\\PowerISO\\uninstall.exe\" -Wait -Verb 'RunAs' -Args '/S'",
