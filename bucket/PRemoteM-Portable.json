    ],
    "persist": [
        "PRemoteM.db",
        "PRemoteM.json",
        "locality.ini",
        "Protocols",
        "Kitty",
        "Logs"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/1Remote/PRemoteM/releases/download/$version/PRemoteM-$version.zip",
        "hash": {
            "find": "sha512:\\s+(.*)"
        }
    }
