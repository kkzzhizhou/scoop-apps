    },
    "depends": "v2ray",
    "url": [
        "https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/202510182211/geoip.dat",
        "https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/202510182211/geosite.dat"
