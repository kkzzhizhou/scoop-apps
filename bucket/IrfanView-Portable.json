    ],
    "persist": [
        "i_view64.ini",
        "i_view32.ini",
        "Languages"
    ],
    "extract_to": [
        "",
        "Plugins"
    ],
    "checkver": {
        "url": "https://www.irfanview.com/",
        "regex": ">\\s*version\\s+([\\d\\.-]+)\\s*<"
    },
    "autoupdate": {
