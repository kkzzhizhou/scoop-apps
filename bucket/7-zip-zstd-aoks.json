            "}",
            "cp \"$dir\\*.dll\" \"$(appdir 7zip-aoks $global)\\current\\Codecs\" -Recurse"
        ]
    },
    "uninstaller": {
        "script": [
            "foreach ($file in (ls \"$dir\\*.dll\")) {",
            "    rm \"$(appdir 7zip-aoks $global)\\current\\Codecs\\$($file.Name)\" -Recurse",
            "}"
        ]
    },
