            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:LOCALAPPDATA\\YTSage\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "bin": "YTSage.exe",
    "shortcuts": [
        [
            "YTSage.exe",
            "YTSage"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/oop7/YTSage/releases",
        "jp": "$[*].assets[*].browser_download_url",
        "regex": "/releases/download/v([\\w.]+)/YTSage-v([\\w.]+)-Setup"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
