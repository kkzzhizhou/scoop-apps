            "hash": "56d69b9c7700de10cbda61d710d3effc200fe9357ed63f73dec91622b67a6fe7"
        }
    },
    "innosetup": true,
    "pre_install": "Get-ChildItem \"$dir\\YTSage*.exe\" | Rename-Item -NewName 'YTSage.exe'",
    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
