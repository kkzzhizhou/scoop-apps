{
    "version": "2.0.2",
    "description": "一个桌面词典：快速、简洁，并且真的让你学会英语",
    "homepage": "https://github.com/ahpxex/Aictionary",
    "license": {
        "identifier": "Unknown"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ahpxex/Aictionary/releases/download/v2.0.2/Aictionary-v2.0.2_windows_x86_64.msi",
            "hash": "e2bb9eea44e47e6e9515d1560c489369f775a97471a7f80cce85658718641887"
        }
    },
    "extract_dir": "PFiles\\aictionary-re",
    "pre_install": "Get-ChildItem \"$dir\\aictionary*.exe\" | Rename-Item -NewName 'aictionary.exe'",
    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\appdata\" -Target \"$env:LOCALAPPDATA\\com.ahpx.aictionary-re\"",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\userdata\" -Target \"$env:APPDATA\\com.ahpx.aictionary-re\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:LOCALAPPDATA\\com.ahpx.aictionary-re\"",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\com.ahpx.aictionary-re\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "bin": "aictionary.exe",
    "shortcuts": [
        [
            "aictionary.exe",
            "Aictionary"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/ahpxex/Aictionary/releases",
        "jp": "$[0].assets[*].browser_download_url",
        "regex": "/releases/download/v([\\d.]+)/Aictionary-v([\\d.]+)_windows"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ahpxex/Aictionary/releases/download/v$version/Aictionary-v$version_windows_x86_64.msi"
            }
        }
    }
}
