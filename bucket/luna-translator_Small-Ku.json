{
    "version": "5.1.0",
    "description": "Translation tool for Visual Novel (Galgame), with varies OCR/Hook/Clipboard support",
    "homepage": "https://github.com/HIllya51/LunaTranslator",
    "license": "GPL-3.0-only",
    "extract_to": "install_tmp",
    "architecture": {
        "32bit": {
            "url": "https://github.com/HIllya51/LunaTranslator/releases/download/v5.1.0/LunaTranslator_x86.zip",
            "hash": "5fb12395b1a69125313ade38d0487e626d49a4e2525120247bda8e27d8f84915"
        },
        "64bit": {
            "url": "https://github.com/HIllya51/LunaTranslator/releases/download/v5.1.0/LunaTranslator.zip",
            "hash": "f728b0cddd2e72d080ed9ecf757f0035cafcbe60c673b6263eb9a20e1344316a"
        }
    },
    "pre_install": [
        "if ($architecture -eq \"32bit\") {",
        "   Move-Item -Path \"$dir\\install_tmp\\LunaTranslator_x86\\*\" -Destination \"$dir\" -Force",
        "} else {",
        "   Move-Item -Path \"$dir\\install_tmp\\LunaTranslator\\*\" -Destination \"$dir\" -Force",
        "}",
        "Remove-Item \"$dir\\install_tmp\" -Force -Recurse"
    ],
    "shortcuts": [
        [
            "LunaTranslator.exe",
            "LunaTranslator"
        ],
        [
            "LunaTranslator_admin.exe",
            "LunaTranslator (Admin)"
        ]
    ],
    "persist": "userconfig",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://github.com/HIllya51/LunaTranslator/releases/download/v$version/LunaTranslator_x86.zip"
            },
            "64bit": {
                "url": "https://github.com/HIllya51/LunaTranslator/releases/download/v$version/LunaTranslator.zip"
            }
        }
    }
}
