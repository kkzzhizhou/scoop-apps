    ],
    "persist": [
        "PRemoteM.db",
        "PRemoteM.json",
        "locality.ini",
        "Protocols",
        "Kitty",
        "Logs"
    ],
    "checkver": {
        "url": "https://github.com/1Remote/1Remote/releases",
        "regex": "/1Remote/1Remote/tree/([^/]+?)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/1Remote/1Remote/releases/download/$version/PRemoteM.zip"
