    "architecture": {
        "64bit": {
            "url": "https://github.com/cube-soft/Cube.Pdf/releases/download/7.0.0-net47/cubepdf-utility-2.0.0-x64.exe",
            "hash": "e6b3d99eedd9026c99dbdb67d4a22861e1d9b1e65a26da06a52c09dc809512e4",
            "installer": {
                "script": [
                    "Get-ChildItem \"$dir\" '*,1*' -Recurse | Remove-Item -Force",
