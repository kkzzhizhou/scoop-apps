{
    "homepage": "https://www.scootersoftware.com",
    "description": "Beyond Compare is a multi-platform utility that combines directory compare and file compare functions in one package. Use it to manage source code, keep directories in sync, compare program output, etc.",
    "version": "5.1.6.31527",
    "license": {
        "identifier": "Shareware",
        "url": "https://www.scootersoftware.com/kb/licensev5"
    },
    "url": "https://github.com/maboloshi/scoop-private/releases/download/v1.0/BeyondCompare-v5.1.6.31527.7z",
    "hash": "26d1431bacd7af2693306bca6c2a8e89f2aff30b00ce7cd7f256f637ea977b48",
    "post_install": [
        "$dir_escaped = \"$dir\".Replace('\\', '\\\\')",
        "@('install-context.reg', 'uninstall-context.reg') | ForEach-Object {",
        "    if (Test-Path \"$bucketsdir\\$bucket\\scripts\\$app\\$_\") {",
        "        $content = Get-Content \"$bucketsdir\\$bucket\\scripts\\$app\\$_\" -Encoding Unicode",
        "        $content = $content.Replace('$install_dir', $dir_escaped)",
        "        if ($global) {",
        "            $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "        }",
        "        Set-Content -Path \"$dir\\$_\" $content -Encoding Unicode",
        "    }",
        "}",
        "# 安装传统和 win11 型式右键菜单",
        "reg import \"$dir\\install-context.reg\"",
        "if ($global) {",
        "    Add-AppxPackage -Path \"$dir\\BCShellEx.msix\" -AllUsers -ErrorAction SilentlyContinue",
        "} else {",
        "    Add-AppxPackage -Path \"$dir\\BCShellEx.msix\" -ErrorAction SilentlyContinue",
        "}",
        "# 恢复数据",
        "ensure \"$persist_dir\" | Out-Null",
        "Copy-Item -Path \"$persist_dir\\*\" -Destination \"$dir\" -Force -ErrorAction SilentlyContinue"
    ],
    "pre_uninstall": [
        "if ($cmd -eq 'uninstall') { ",
        "    # 卸载传统和 win11 型式右键菜单",
        "    reg import \"$dir\\uninstall-context.reg\"",
        "    if ($global) {",
        "        Get-AppxPackage -Name 'ScooterSoftware.BeyondCompare.5.ShellExt' -AllUsers | Remove-AppxPackage -AllUsers | Out-Null",
        "    } else {",
        "        Get-AppxPackage -Name 'ScooterSoftware.BeyondCompare.5.ShellExt' | Remove-AppxPackage | Out-Null",
        "    }",
        "}",
        "# 备份数据",
        "'BC5Key.txt', 'BC*.xml'| ForEach-Object {",
        "    if (Test-Path \"$dir\\$_\") {",
        "        Copy-Item \"$dir\\$_\" \"$persist_dir\\$_\" -Force -ErrorAction SilentlyContinue",
        "    }",
        "}"
    ],
    "bin": [
        "Bcomp.exe",
        "BCompare.exe"
    ],
    "shortcuts": [
        [
            "BCompare.exe",
            "Beyond Compare 5"
        ],
        [
            "BCClipboard.exe",
            "Clipboard Compare"
        ]
    ],
    "notes": [
        "If an error occurs when updating or uninstalling, execute the following command then retry:",
        "`Stop-Process -Name 'explorer'`"
    ]
}
