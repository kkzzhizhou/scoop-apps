{
    "version": "0.6.27+101",
    "description": "v2ray, xray, sing-box, clash, mihomo... GUI for Windows, macOS, Linux, Android",
    "homepage": "https://github.com/AnyPortal/AnyPortal",
    "license": {
        "identifier": "Unknown"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/AnyPortal/AnyPortal/releases/download/v0.6.27+101/anyportal-windows.zip",
            "hash": "a7bdb9cb9d70b462aa4507f8bfc0e19b81c14808db7bfc9db1d850ec3480c193"
        }
    },
    "extract_dir": "anyportal-windows",
    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\appdata\" -Target \"$env:APPDATA\\com.github.anyportal\"",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\userdata\" -Target \"$env:LOCALAPPDATA\\com.github.anyportal\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\com.github.anyportal\"",
            "Dismount-ExternalRuntimeData -Target \"$env:LOCALAPPDATA\\com.github.anyportal\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "bin": "anyportal.exe",
    "shortcuts": [
        [
            "anyportal.exe",
            "AnyPortal"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/AnyPortal/AnyPortal/releases",
        "jp": "$[0].assets[*].browser_download_url",
        "regex": "/releases/download/v([\\d.]+)%2B([\\d.]+)/anyportal-windows",
        "replace": "${1}+${2}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/AnyPortal/AnyPortal/releases/download/v$version/anyportal-windows.zip"
            }
        }
    }
}
