    "description": "网易泡泡",
    "depends": "sudo",
    "url": "https://popo.netease.com/file/popowin/POPO-setup_3_46_1.exe?need_rewrite=1#/popo.zip",
    "hash": "151ef3aab4f2b191d3e7e8ada7860446a65e9ab627d30048610e2baf7c4b38e3",
    "checkver": {
        "url": "http://popo.netease.com/api/open/jsonp/check_version?device=0",
        "regex": "\"version\":\"(\\d+\\.\\d+.\\d+)\""
    },
    "extract_dir": "release",
    "autoupdate": {
        "url": "https://popo.netease.com/file/popowin/POPO-setup_$majorVersion_$minorVersion_$patchVersion.exe?need_rewrite=1#/popo.zip"
    },
    "installer": {
        "script": [
            "Move-Item -Path $dir\\popo* $dir\\popo -Force",
            "sudo New-Item Registry::HKEY_LOCAL_MACHINE\\SOFTWARE\\Classes\\netease-popoapp -Force -ItemType String -Value 'URL:Netease Popo Protocol' -ErrorAction SilentlyContinue",
            "sudo New-ItemProperty Registry::HKEY_LOCAL_MACHINE\\SOFTWARE\\Classes\\netease-popoapp -Force -PropertyType string -Name 'URL Protocol' -Value ' ' -ErrorAction SilentlyContinue",
            "sudo New-Item Registry::HKEY_LOCAL_MACHINE\\SOFTWARE\\Classes\\netease-popoapp\\shell\\open\\command -Force -ItemType String -Value \"`\"$dir\\popo\\Start.exe`\" `\"%1`\"\" -ErrorAction SilentlyContinue"
        ]
    },
    "notes": [
        "配置开机自启：reg add HKCU\\Software\\Microsoft\\Windows\\CurrentVersion\\Run /v popo6 /d \"$dir\\popo\\Start.exe\" /f"
    ],
    "shortcuts": [
        [
            "popo\\Start.exe",
            "网易泡泡"
        ]
    ]
}